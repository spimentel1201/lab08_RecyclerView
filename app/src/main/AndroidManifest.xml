<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.idnp.lab08_recyclerview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="App Prueba SQLite"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lab08_recyclerview">
        <activity
            android:name="com.idnp.lab08_recyclerview.NuevoActivity"
            android:parentActivityName="com.idnp.lab08_recyclerview.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.idnp.lab08_recyclerview.MainActivity" />
        </activity>
        <activity
            android:name="com.idnp.lab08_recyclerview.VerActivity"
            android:parentActivityName="com.idnp.lab08_recyclerview.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.idnp.lab08_recyclerview.MainActivity" />
        </activity>
        <activity
            android:name="com.idnp.lab08_recyclerview.EditarActivity"
            android:parentActivityName="com.idnp.lab08_recyclerview.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.idnp.lab08_recyclerview.MainActivity" />
        </activity>
        <activity
            android:name="com.idnp.lab08_recyclerview.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>